{% extends 'base.html.twig' %}

{% block body_id 'project_add' %}

{% block main %}
    <h1>{{ 'project.title.new'|trans }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.amount) }}
    {{ form_row(form.startDate) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'project.label.create'|trans }}
    </button>
    {{ form_widget(form.saveAndCreateNew, {label: 'project.label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
